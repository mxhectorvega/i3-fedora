#!/bin/sh

BATTERY=1
BATTERY_STATE=$(echo "${BATTERY_INFO}" | upower -i $(upower -e | grep 'BAT') | grep -E "state|to\ full" | awk '{print $2}')
BATTERY_POWER=$(echo "${BATTERY_INFO}" | upower -i $(upower -e | grep 'BAT') | grep -E "percentage" | awk '{print $2}' | tr -d '%')
URGENT_VALUE=10

if   [ "${BATTERY_POWER}" -gt 94 ]; then
    BATTERY_ICON="‚ù§Ô∏è‚ù§Ô∏è‚ù§Ô∏è‚ù§Ô∏è‚ù§Ô∏è"
elif [ "${BATTERY_POWER}" -gt 89 ]; then
     BATTERY_ICON="üíî‚ù§Ô∏è‚ù§Ô∏è‚ù§Ô∏è‚ù§Ô∏è"
elif [ "${BATTERY_POWER}" -gt 79 ]; then
     BATTERY_ICON="üíî‚ù§Ô∏è‚ù§Ô∏è‚ù§Ô∏è‚ù§Ô∏è"
elif [ "${BATTERY_POWER}" -gt 69 ]; then
     BATTERY_ICON="‚ù§Ô∏è‚ù§Ô∏è‚ù§Ô∏è‚ù§Ô∏è"
elif [ "${BATTERY_POWER}" -gt 59 ]; then
     BATTERY_ICON="üíî‚ù§Ô∏è‚ù§Ô∏è‚ù§Ô∏è"
elif [ "${BATTERY_POWER}" -gt 49 ]; then
     BATTERY_ICON="‚ù§Ô∏è‚ù§Ô∏è‚ù§Ô∏è"
elif [ "${BATTERY_POWER}" -gt 39 ]; then
     BATTERY_ICON="üíî‚ù§Ô∏è‚ù§Ô∏è"
elif [ "${BATTERY_POWER}" -gt 29 ]; then
     BATTERY_ICON="‚ù§Ô∏è‚ù§Ô∏è"
elif [ "${BATTERY_POWER}" -gt 19 ]; then
     BATTERY_ICON="üíî‚ù§Ô∏è"
elif [ "${BATTERY_POWER}" -gt 9 ]; then
     BATTERY_ICON="‚ù§Ô∏è"
elif [ "${BATTERY_POWER}" -gt 4 ]; then
     BATTERY_ICON="üíî"
else
    BATTERY_ICON="üíî"
fi

if [ "${BATTERY_STATE}" = "discharging" ]; then
    echo "${BATTERY_ICON} ${BATTERY_POWER}%"
    echo "${BATTERY_ICON} ${BATTERY_POWER}%"
    {$F$color} echo ""
else
    echo "üîå${BATTERY_ICON} ${BATTERY_POWER}%"
    echo "üîå${BATTERY_ICON} ${BATTERY_POWER}%"
    {$F$color} echo ""
fi

if [ "${BATTERY_POWER}" -le "${URGENT_VALUE}" ]; then
  exit 33
fi
