#!/usr/bin/env bash

clear
echo -e ""
echo -e ""
echo -e "Escribe la contrase√±a para reemplazar archivo .bashrc"
sudo rm -rf ~/.bashrc
mkdir ~/.local/bin
mkdir ~/.local/share
mkdir ~/.local/share/fonts
clear
git clone https://github.com/mxhectorvega/i3fedora /tmp/i3fedora
git clone https://github.com/mxhectorvega/tipografias /tmp/tipografias
cp -R /tpm/i3fedora/* ~/
cp -R /tpm/tipografias/* ~/.local/share/fonts
clear
echo -e ""
echo -e ""
echo -e "Instalando software necesario"
sleep 2
sudo dnf -y install xclip maim xprop xset xsetrot kitty
clear
echo -e ""
echo -e ""
echo -e "Configuraciones aplicadas"
sleep 2
clear
echo -e ""
echo -e ""
echo -e "Consulte los atajos del teclado en el archivo ~/.config/i3/config"
sleep 2
clear
echo -e ""
echo -e ""
echo -e "Contribuye payal.me/hivz"
sleep 2
exit

