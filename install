#!/usr/bin/env bash

clear
printf ''
printf ''
printf 'Escribe la contrase√±a para reemplazar archivo .bashrc'
mkdir '$HOME'/.local/bin
mkdir '$HOME'/.local/share
mkdir '$HOME'/.local/share/fonts
sudo rm -rf '$HOME'/.bashrc

clear
git -C /tmp/i3-fedora https://github.com/mxhectorvega/i3-fedora 
git -C /tmp/tipografias https://github.com/mxhectorvega/tipografias 
cp -R /tmp/i3-fedora/* '$HOME'
cp -R /tmp/tipografias/* '$HOME'/.local/share/fonts

clear
printf ''
printf ''
printf 'Instalando software necesario'
sleep 2
sudo dnf -y install xclip maim xprop xset xsetrot kitty

clear
printf ''
printf ''
printf 'Configuraciones aplicadas'
sleep 2

clear
printf ''
printf ''
printf 'Consulte los atajos del teclado en el archivo ~/.config/i3/config'
sleep 2

clear
printf ''
printf ''
printf 'Contribuye payal.me/hivz'
sleep 2
pkill -9 $TERMINAL