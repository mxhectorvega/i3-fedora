# Define tu tecla super por defecto (tecla windows)
set $mod Mod4

# Fuente para las ventanas y bar por defecto
font pango:SF Compact Display Semibold 10

# Control de volumen por defecto pulseaudio PulseAudio.
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +9% && sleep 0.2 && pkill -RTMIN+1 i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -9% && sleep 0.2 && pkill -RTMIN+1 i3blocks
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && sleep 0.2 && pkill -RTMIN+1 i3blocks
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && sleep 0.2 && pkill -RTMIN+1 i3blocks

# Controles para el brillo en pipewire
bindsym XF86MonBrightnessUp exec --no-startup-id light -A 5 # incrementar brillo
bindsym XF86MonBrightnessDown exec --no-startup-id light -U 5 # disminiur brillo

# Usa super + click izquiero para mover ventanas flotantes
floating_modifier $mod

# Abre una terminal por defecto URXVT
bindsym $mod+Return exec --no-startup-id i3-sensible-terminal

# Cierra la ventana actual
bindsym $mod+Shift+q kill

# Lanza menu por defecto Dmenu
bindsym $mod+d exec --no-startup-id dmenu_run -l 5 -fn "SF\\Compact\\Display-10" -p Dmenu:
bindsym $mod+shift+d exec --no-startup-id programas

# change focus
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+ntilde focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+ntilde move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

# Nombre de los espacios de trabajo
set $ws1 "1:üíª Term"
set $ws2 "2:üìù Code"
set $ws3 "3:üìÅ File"
set $ws4 "4:üåé Www"
set $ws5 "5:üë• Msgs"
set $ws6 "6:üéπ Media"
set $ws7 "7:üìÑ Docs"
set $ws8 "8:‚úèÔ∏è Draw"
set $ws9 "9:üñ•Ô∏è VMs"
set $ws10 "10:üç∫ Conf"

# Moverse a otro espacio de trabajo
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# Mover ventana activa a otro espacio de trabajo
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# Recargar archivo de configuracion
bindsym $mod+Shift+c reload

# Recargar todo i3
bindsym $mod+Shift+r restart

# Cerrar secion con barra emergente
bindsym $mod+Shift+e exec --no-startup-id "i3-nagbar -t warning -m '¬øQue desea hacer?' -B '  Cerrar sesi√≥n  ' 'i3-msg exit' --font 'pango:SF Compact Display Semibold 10'"

# Apagar o reiniciar con barra emergente
bindsym $mod+BackSpace exec --no-startup-id "i3-nagbar -t warning -m '¬øQue desea hacer?' -B '   Reiniciar   ' 'reboot' -b '   Aapagar   ' 'poweroff' --font 'pango:SF Compact Display Semibold 10'"

# Carmbiar de tama√±o las ventanas (tambi√©n puedes usar el mouse para eso)
mode "resize" {
	# These bindings trigger as soon as you enter the resize mode
	bindsym j resize shrink width 10 px or 10 ppt
	bindsym k resize grow height 10 px or 10 ppt
	bindsym l resize shrink height 10 px or 10 ppt
	bindsym ntilde resize grow width 10 px or 10 ppt

	# same bindings, but for the arrow keys
	bindsym Left resize shrink width 10 px or 10 ppt
	bindsym Down resize grow height 10 px or 10 ppt
	bindsym Up resize shrink height 10 px or 10 ppt
	bindsym Right resize grow width 10 px or 10 ppt

	# back to normal: Enter or Escape or $mod+r
	bindsym Return mode "default"
	bindsym Escape mode "default"
	bindsym $mod+r mode "default"
}

# Colores de las ventanas
#			background		background		text		text
client.focused		#141414			#141414			#ffffff		#00ff00
client.unfocused	#141414			#141414			#8f8f8f		#00ff00
client.focused_inactive	#141414			#141414			#8f8f8f		#00ff00
client.urgent		#141414			#141414			#f00000		#00ff00

# Configuracion de la barra para i3wm, puede ser i3block, i3status o i3bar
# a continuacion podra ajustar la pocicion asi como colores, fuentes de la barra
bar {
	# Bar program
	status_command i3blocks
	#status_command i3status
	# Position of the bar
	tray_padding 3
	position top
	font pango:SF Compact Display Semibold 10
	# Bar colors
	colors {
		background #141414
		separator #141414
		#			border		background	text
		focused_workspace	#141414		#141414		#ffffff
		inactive_workspace	#141414		#141414		#7f7f7f
		urgent_workspace	#141414		#141414		#f00000
	}
}

# Reglas para ventanas
