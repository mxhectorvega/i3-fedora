[WIFI]
command=~/.config/i3blocks/scr/wifi; [[ -z "${BLOCK_BUTTON}" ]] || urxvt -e nmtui &
interval=15
color=#7d84ff

[ETHERNET]
command=~/.config/i3blocks/scr/ethernet; [[ -z "${BLOCK_BUTTON}" ]] || urxvt -e nmtui &
interval=15
color=#96eb17

[CPU]
command=~/.config/i3blocks/scr/cpu; [[ -z "${BLOCK_BUTTON}" ]] || urxvt -e bpytop &
interval=15
color=#ff3b3b

[MEM]
command=~/.config/i3blocks/scr/memoria; [[ -z "${BLOCK_BUTTON}" ]] || urxvt -e bpytop &
interval=15
color=#ffffff

[BATTERY]
command=~/.config/i3blocks/scr/bateria
pango=
interval=30
color=#FEC925

[SOUND]
command=~/.config/i3blocks/scr/sonido; [[ -z "${BLOCK_BUTTON}" ]] || pavucontrol &
interval=15
signal=1
color=#4baefa

[TIME_DATE]
command=date +" ðŸ“… %a, %d %b - %H:%M "
