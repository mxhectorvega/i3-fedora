align=center
separator=false
color=#ffffff
separator_block_width=10
markup=pango

[WIFI]
command=~/.config/i3blocks/scr/wifi; [[ -z "${BLOCK_BUTTON}" ]] || $TERMINAL -e nmtui &
interval=15

[ETHERNET]
command=~/.config/i3blocks/scr/ethernet; [[ -z "${BLOCK_BUTTON}" ]] || $TERMINAL -e nmtui &
interval=15

[CPU]
command=~/.config/i3blocks/scr/cpu; [[ -z "${BLOCK_BUTTON}" ]] || $TERMINAL -e bpytop &
interval=10

[MEM]
command=~/.config/i3blocks/scr/memoria; [[ -z "${BLOCK_BUTTON}" ]] || $TERMINAL -e bpytop &
interval=15

[BATTERY]
command=~/.config/i3blocks/scr/bateria
interval=30

[SOUND]
command=~/.config/i3blocks/scr/sonido; [[ -z "${BLOCK_BUTTON}" ]] || pavucontrol &
interval=15
signal=1

[TIME_DATE]
command=date +"ðŸ“… %a, %d %b - %H:%M"
interval=60
